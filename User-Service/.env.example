# User Service Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# ============================================================================
# REQUIRED - App Settings
# ============================================================================
APP_NAME="User Service"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# ============================================================================
# REQUIRED - Server Settings
# ============================================================================
HOST=0.0.0.0
PORT=8001

# ============================================================================
# REQUIRED - Supabase Settings
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
# NEVER commit service key - use secret manager
SUPABASE_SERVICE_KEY=your-service-role-key-here-use-secret-manager
# JWT secret must match gateway
SUPABASE_JWT_SECRET=your-jwt-secret-here-must-match-gateway

# ============================================================================
# REQUIRED - CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
# NEVER use "*" in production
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:8000

# ============================================================================
# OAuth Redirect URLs
# ============================================================================
GOOGLE_REDIRECT_URL=http://localhost:8001/api/auth/callback
LINKEDIN_REDIRECT_URL=http://localhost:8001/api/auth/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=https://yourdomain.com

# ============================================================================
# REQUIRED - JWT Settings
# ============================================================================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Redis URL for distributed rate limiting (RECOMMENDED for production)
RATE_LIMIT_REDIS_URL=redis://localhost:6379/3

# ============================================================================
# Monitoring & Observability (RECOMMENDED)
# ============================================================================
LOG_LEVEL=INFO

# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn-here

# Metrics (Prometheus)
PROMETHEUS_PORT=9092

# ============================================================================
# Production Security Notes
# ============================================================================
# 1. NEVER commit SUPABASE_SERVICE_KEY to version control
# 2. Use secret management service for sensitive keys
# 3. Set DEBUG=false and ENVIRONMENT=production in production
# 4. Use specific CORS_ORIGINS, never "*"
# 5. Rotate JWT secrets regularly
# 6. Enable monitoring and alerting
